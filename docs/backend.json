{
  "entities": {
    "NewsArticle": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "NewsArticle",
      "type": "object",
      "description": "Represents a news article on the SnakeWolf website.",
      "properties": {
        "slug": { "type": "string", "description": "URL-friendly slug for the article." },
        "title": { "type": "string", "description": "Title of the news article." },
        "date": { "type": "string", "description": "Publication date of the article." },
        "tags": { "type": "array", "items": { "type": "string" }, "description": "Tags associated with the article." },
        "summary": { "type": "string", "description": "A brief summary of the article." },
        "content": { "type": "string", "description": "The full HTML content of the article." },
        "imageId": { "type": "string", "description": "ID for the article's main image." }
      },
      "required": ["slug", "title", "date", "summary", "content", "imageId"]
    },
    "WorkItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WorkItem",
      "type": "object",
      "description": "Represents a single work/project in the portfolio.",
      "properties": {
        "slug": { "type": "string", "description": "URL-friendly slug for the work item." },
        "title": { "type": "string", "description": "Title of the work item." },
        "category": { "type": "string", "enum": ["App", "Game"], "description": "Category of the work item." },
        "description": { "type": "string", "description": "Short description of the work item." },
        "longDescription": { "type": "string", "description": "Detailed HTML description of the work item." },
        "platforms": { 
          "type": "array", 
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "url": { "type": "string" }
            },
            "required": ["name", "url"]
          },
          "description": "Platforms the work is available on."
        },
        "imageId": { "type": "string", "description": "ID for the work's main image." },
        "galleryImageIds": { "type": "array", "items": { "type": "string" }, "description": "IDs for gallery images." }
      },
      "required": ["slug", "title", "category", "description", "longDescription", "platforms", "imageId", "galleryImageIds"]
    },
    "CreatorItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CreatorItem",
      "type": "object",
      "description": "Represents a creator supported by SnakeWolf.",
      "properties": {
        "name": { "type": "string", "description": "Name of the creator." },
        "description": { "type": "string", "description": "Description of the creator." },
        "imageId": { "type": "string", "description": "ID for the creator's profile image." },
        "url": { "type": "string", "description": "URL to the creator's page/social media." },
        "tags": { "type": "array", "items": { "type": "string" }, "description": "Tags associated with the creator." }
      },
      "required": ["name", "description", "imageId", "url", "tags"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/news_articles/{newsArticleId}": {
      "schema": { "$ref": "#/entities/NewsArticle" },
      "description": "Stores individual news articles."
    },
    "/work_items/{workItemId}": {
      "schema": { "$ref": "#/entities/WorkItem" },
      "description": "Stores individual portfolio work items."
    },
    "/creator_items/{creatorItemId}": {
      "schema": { "$ref": "#/entities/CreatorItem" },
      "description": "Stores information about supported creators."
    }
  }
}
