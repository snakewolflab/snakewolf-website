/**
 * @description This ruleset enforces public read access for news articles, tags, and media items,
 *              while requiring authentication to create contact form submissions.
 * @dataStructure
 *  /news_articles/{newsArticleId} - Publicly readable news articles.
 *  /tags/{tagId} - Publicly readable tags for news articles.
 *  /contact_form_submissions/{contactFormSubmissionId} - Contact form submissions, requiring authentication to create.
 *  /media_items/{mediaItemId} - Publicly readable media items.
 * @keySecurityDecisions
 *  - Unauthenticated users can read news articles, tags, and media items.
 *  - Only authenticated users can create contact form submissions.
 *  - No data ownership is enforced in these rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read news articles, but no one to create, update, or delete them.
     * @path /news_articles/{newsArticleId}
     * @allow (get, list) Any user, authenticated or not.
     * @deny (create, update, delete) No one.
     * @principle Public read access.
     */
    match /news_articles/{newsArticleId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read tags, but no one to create, update, or delete them.
     * @path /tags/{tagId}
     * @allow (get, list) Any user, authenticated or not.
     * @deny (create, update, delete) No one.
     * @principle Public read access.
     */
    match /tags/{tagId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows authenticated users to create contact form submissions, but no one to read, update, or delete them.
     * @path /contact_form_submissions/{contactFormSubmissionId}
     * @allow (create) Any authenticated user.
     * @deny (get, list, update, delete) No one.
     * @principle Requires authentication to create.
     */
    match /contact_form_submissions/{contactFormSubmissionId} {
      allow get, list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read media items, but no one to create, update, or delete them.
     * @path /media_items/{mediaItemId}
     * @allow (get, list) Any user, authenticated or not.
     * @deny (create, update, delete) No one.
     * @principle Public read access.
     */
    match /media_items/{mediaItemId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // Helper function to determine if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
  }
}